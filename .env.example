# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# WebSocket Configuration
VITE_WEBSOCKET_URL=ws://localhost:3001

# AI Configuration (for production)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Translate API (optional)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-key

# Development
NODE_ENV=development

# App Configuration
VITE_APP_NAME=ChatApp
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Real-time messaging application with AI-powered features"

# Storage Configuration
VITE_MAX_FILE_SIZE=52428800  # 50MB in bytes
VITE_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,.pdf,.doc,.docx,.txt,.xlsx,.pptx

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VOICE_MESSAGES=true
VITE_ENABLE_VIDEO_CALLS=false
VITE_ENABLE_ANALYTICS=false

# Security
VITE_RATE_LIMIT_MESSAGES=100  # Messages per minute
VITE_RATE_LIMIT_API=1000      # API calls per hour

# PWA Configuration
VITE_PWA_NAME="ChatApp"
VITE_PWA_SHORT_NAME="ChatApp"
VITE_PWA_DESCRIPTION="Real-time messaging with AI"
VITE_PWA_THEME_COLOR="#3b82f6"
VITE_PWA_BACKGROUND_COLOR="#ffffff"
