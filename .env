# Supabase Configuration
# Replace these with your actual Supabase values
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-actual-anon-key-here

# WebSocket Configuration
VITE_WEBSOCKET_URL=ws://localhost:3001

# App Configuration
VITE_APP_NAME=ChatApp
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Real-time messaging application with AI-powered features"

# AI Configuration
# Get API keys from respective providers:
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
# Google: https://console.cloud.google.com/apis/credentials
VITE_OPENAI_API_KEY=your-openai-api-key
VITE_ANTHROPIC_API_KEY=your-anthropic-api-key
VITE_GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# AI Backend Settings
VITE_AI_DEFAULT_PROVIDER=openai
VITE_AI_RATE_LIMIT_PER_MINUTE=60
VITE_AI_RATE_LIMIT_PER_HOUR=1000
VITE_AI_MAX_MESSAGE_LENGTH=4000

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VOICE_MESSAGES=true
VITE_ENABLE_VIDEO_CALLS=false

# Storage Configuration
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,.pdf,.doc,.docx,.txt,.xlsx,.pptx
